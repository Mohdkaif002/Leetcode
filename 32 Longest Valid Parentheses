class Solution {
    public int longestValidParentheses(String s) {
        int n = s.length();
        int[] stack = new int[n + 1];
        int index = -1;
        int maxLen = 0;
        stack[++index] = -1;
        for (int i = 0; i < n; i++) {
            char ch = s.charAt(i);
            if (ch == '(') {
                stack[++index] = i;
            } else {
                index--;
                if (index == -1) {
                    stack[++index] = i;
                } else {
                    maxLen = Math.max(maxLen, i - stack[index]);
                }
            }
        }
        return maxLen;
    }
}
